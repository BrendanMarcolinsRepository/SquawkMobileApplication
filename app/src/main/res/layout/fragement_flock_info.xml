<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewInfoFlock1"
        android:layout_width="375dp"
        android:layout_height="5dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/flock_group_info_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_account_profile_picture"
        app:layout_constraintEnd_toStartOf="@+id/flock_groupname_info_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewInfoFlock1" />

    <TextView
        android:id="@+id/flock_groupname_info_textview"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="108dp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewInfoFlock1" />

    <View
        android:id="@+id/viewInfoFlock2"
        android:layout_width="375dp"
        android:layout_height="5dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flock_groupname_info_textview" />

    <TextView
        android:id="@+id/flock_groupmember_info_textview"
        android:layout_width="150dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:gravity="center"
        android:text="Members:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewInfoFlock2" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleFlockInfo"
        android:layout_width="342dp"
        android:layout_height="269dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flock_groupmember_info_textview" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/flock_info_join"
        android:layout_width="178dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/green"
        android:text="join"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleFlockInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>