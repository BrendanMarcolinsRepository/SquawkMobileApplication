<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/leader_board_cardview"
    app:cardBackgroundColor="@color/buttonColours"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_style"
        android:padding="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leaderboardPosition"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:inputType="number"
            android:text="0"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/leaderboard_flock_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Flock Name" />

        <TextView
            android:id="@+id/leaderboard_flock_points"
            android:layout_width="59dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:textStyle="bold"
            android:inputType="number"
            android:text="0"
            android:gravity="center" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>