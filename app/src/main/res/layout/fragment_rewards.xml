<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/greenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/rewardLine"
        android:layout_width="370dp"
        android:layout_height="5dp"
        android:background="#9A98FF"
        android:layout_marginStart="10dp"
        android:layout_marginTop="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reward_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:text="Congradulations, your all time score is"
        android:textSize="17sp"
        android:textColor="#8A2BE2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/reward_compare_button"
        android:layout_width="135dp"
        android:layout_height="33dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="80dp"
        android:outlineAmbientShadowColor="#333"
        android:outlineSpotShadowColor="#333"
        app:cardBackgroundColor="#2CCF23"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reward_compare_txt"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:text="Compare"
            android:textColor="#ffffff"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/reward_achievement_button"
        android:layout_width="135dp"
        android:layout_height="35dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="130dp"
        app:cardBackgroundColor="#2CCF23"
        android:outlineAmbientShadowColor="#333"
        android:outlineSpotShadowColor="#333"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/reward_achievement_txt"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:text="Achievement"
            android:textColor="#ffffff"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/reward_droplist"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="135dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <Spinner
            android:id="@+id/reward_compare_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown"
            android:popupBackground="@drawable/bg_popup"
            android:background="@drawable/bg_spinner"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/reward_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="200dp"
        android:text="Your score for this month is"
        android:textSize="15sp"
        android:textColor="#8A2BE2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/bird_list_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
