<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/greenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="80dp"
        android:text="Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBar1"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="152dp"
        app:cardBackgroundColor="#8A2BE2"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/settings_slideButtonDisable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/slidebutton1" />

        <TextView
            android:id="@+id/settings_barContent1"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Backup Restore"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBar2"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="235dp"
        app:cardBackgroundColor="#8A2BE2"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/settings_slideButtonEnable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/slidebutton2" />

        <TextView
            android:id="@+id/settings_barContent2"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Automatic Update"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBar3"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="316dp"
        app:cardBackgroundColor="#8A2BE2"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/settings_slideButtonEnable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/slidebutton2" />

        <TextView
            android:id="@+id/settings_barContent3"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Security Encryption"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBar4"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="396dp"
        app:cardBackgroundColor="#8A2BE2"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/settings_triangleButton4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="280dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/arrow_image" />

        <TextView
            android:id="@+id/settings_barContent4"
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Privacy Permissions"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBar5"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="480dp"
        app:cardBackgroundColor="#8A2BE2"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/settings_slideButtonDisable5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/slidebutton1" />

        <TextView
            android:id="@+id/settings_barContent5"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Send Usage to Squawk"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsBar6"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="564dp"
        app:cardBackgroundColor="#8A2BE2"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/settings_triangleButton6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="280dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/arrow_image" />

        <TextView
            android:id="@+id/settings_barContent6"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Terms and Conditions"
            android:textColor="#FFF"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
